<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DeviceTester.Content.Pages.Additionals.SharingPage"
    xmlns:Components = "clr-namespace:DeviceTester.Content.CustomComponent"
    x:Name="SharingObj"
    Style="{StaticResource WindowContainer}">

    <ContentPage.Content>
         <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                 <RowDefinition Height="50"/>
                 <RowDefinition Height="40"/>
                 <RowDefinition Height="*"/>
                 <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <StackLayout HorizontalOptions="FillAndExpand" Grid.Row="1" Orientation="Horizontal" Padding="10" >
                <Button x:Name="SelectImage" Clicked="SelectImage_Clicked"  Text="Select Image" TextColor="White" HorizontalOptions="StartAndExpand" />
                <Button x:Name="ShareImage" Clicked="ShareImage_Clicked" Text="Share file" TextColor="White" HorizontalOptions="EndAndExpand"/>
            </StackLayout>
             <Frame CornerRadius="10" Grid.Row="2" BackgroundColor="Transparent" IsClippedToBounds="True">
                <Image x:Name="SelectedImage" />
             </Frame>
            <Components:CustomButton x:Name="BackButton" Grid.Row="3"/>
         </Grid>
    </ContentPage.Content>
</ContentPage>
