<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DeviceTester.Content.Views.BluetoothDeviceView" >
        <Frame CornerRadius="5" BackgroundColor="#EEECEC">
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Label Text="{Binding DeviceName}" TextColor="Black" FontSize="Caption"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <StackLayout>
                        <Label Text="GUID :" TextColor="Black" FontSize="Small"/>
                        <Label Text="{Binding DeviceId}" TextColor="Black" HorizontalOptions="Start" FontSize="Small"/>
                    </StackLayout>
                    <StackLayout>
                        <Label Text="State :" TextColor="Black" FontSize="Small"/>
                        <Label Text="{Binding State}" TextColor="Black" HorizontalOptions="Center" FontSize="Small"/>
                    </StackLayout>
                    <StackLayout>
                        <Label Text="Distance :" TextColor="Black" FontSize="Small"/>
                        <Label Text="{Binding Distance}" TextColor="Black" HorizontalOptions="End" FontSize="Small"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </Frame>
</ContentView>
